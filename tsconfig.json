{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "noEmit": true,
    "jsx": "preserve",
    "allowJs": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./node_modules/@types/",
      "./typings/"
    ]
  },
  "include": [
    "src",
    "**/*"
  ],
  "exclude": [
    "build",
    "node_modules"
  ]
}
